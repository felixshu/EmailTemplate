//************
// Variables
//************

darkBlue = #0f3446
bgColor = #52596b
iconPink = #fd6e6e
listGreen = #36e2be
MenuGrayBlue = #646a7a
btLine = #9ba0aa
menuOrange = #ffac79

body
  font-family:"HelveticaNeueETW01-55Rg"
  margin: 0
  padding: 0
  min-width: 100%!important
p
  font-family:"HelveticaNeueETW01-55Rg"
.header
  padding: 0
img
  height: auto
.content
  width: 100%
  max-width: 600px

.subhead
  font-size 15
  color #ffffff
  font-family 'HelveticaNeueETW01-45Lt'
  letter-spacing 10px
  padding 0 0 0 10px

.h1,.h2
  color: #ffffff
  font-family: "HelveticaNeueETW01-65Md"
.h1
  font-size 33px
  line-height 38px
  font-weight bold
  
.h2
  padding: 0 0 15px 0
  font-size: 24px 
  line-height: 28px 
  font-weight: bold

.h3
  color: #ffffff
  font-size: 20px
  line-height:22px
  font-family:"HelveticaNeueETW01-65Md"
  font-weight:bold
  padding: 8px 0 8px 8px

.menufont
  color: #646a7a
  font-size: 16px
  line-height:28px
  font-family:'HelveticaNeueW01-47LtCn_692686'
  font-weight:normal
  
.bodycopy
  color: #ffffff
  font-family:'HelveticaNeueETW01-45Lt'
  font-size: 16px
  line-height: 22px

.innerpadding
  padding: 20px 40px 20px 40px
  
.innerpadding_2
  padding-right 40px
  padding-bottom 20px
.innerpadding_3
  padding 20px 40px 10px 40px
  
.footer
  padding: 20px 30px 15px 30px
  
.footercopy
  font-family: sans-serif
  font-size: 14px
  color: #ffffff
  
.footercopy a
  color darkBlue
  text-decoration: underline

table.tables
  font 14px HelveticaNeueETW01-65Md
  color white
  table-layout: fixed
  width:100%
  max-width:600px
  padding: 20px 15px 20px 15px
  tr td
    border-top: 1px solid btLine
    border-bottom: 1px solid btLine
  .Rank
    width:10%
    text-align:center
    font-family:'HelveticaNeueETW01-65Md'
  .Name
    width:40%
  .Quantity
    width:15%
  .Price
    width:20%
  .Amount
    width:15%
    
table.Total
  color:white
  width:100%
  max-width:200px
  font-family:'HelveticaNeueETW01-65Md'
  line-height:20px
  padding: 15px 15px 15px 15px
  tr td
    text-align:right
  
table.delivery
  color white
  font-size 16px 
  font-family HelveticaNeueETW01-55Rg
  tr td
    text-align left


